<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@android:color/background_light"
    android:theme="@style/AppTheme"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <Button
        android:id="@+id/button_changeusername"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:text="Change Username"
        android:background="@drawable/button_login"
        android:layout_below="@+id/text_username"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_changepw"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:background="@drawable/button_login"
        android:layout_below="@+id/button_changeusername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Change Password" />

    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Houses you've joined:"
        android:layout_marginTop="6dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:id="@+id/textView7"
        android:layout_below="@+id/button_changepw"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/listview_houses"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/textView7"
        android:divider="@android:color/black"
        android:dividerHeight="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_newhouse"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@+id/listview_houses"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_login"
        android:text="Add New House" />

    <Button
        android:id="@+id/button_joinhouse"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/button_newhouse"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_login"
        android:text="Join Existing House" />

</RelativeLayout>